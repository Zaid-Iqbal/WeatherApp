<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#1AFFFFFF">

    <TextView
        android:id="@+id/DayRecycleDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/HourlyIconDisplay"
        app:layout_constraintStart_toStartOf="@+id/HourlyIconDisplay"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TimeRecycleDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1:00 PM"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/HourlyIconDisplay"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="@+id/HourlyIconDisplay"
        app:layout_constraintTop_toBottomOf="@+id/DayRecycleDisplay" />

    <TextView
        android:id="@+id/TempRecycleDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="64 Â°F"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/HourlyIconDisplay"
        app:layout_constraintStart_toStartOf="@+id/HourlyIconDisplay"
        app:layout_constraintTop_toBottomOf="@+id/HourlyIconDisplay" />

    <TextView
        android:id="@+id/SkyRecycleDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overcast"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/HourlyIconDisplay"
        app:layout_constraintStart_toStartOf="@+id/HourlyIconDisplay"
        app:layout_constraintTop_toBottomOf="@+id/TempRecycleDisplay" />

    <ImageView
        android:id="@+id/HourlyIconDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TimeRecycleDisplay"
        app:srcCompat="@android:mipmap/sym_def_app_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>